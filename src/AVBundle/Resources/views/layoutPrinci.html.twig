{% block javascripts %}
  {{ parent() }}
  <script>

   


   var GlobalModal= "{{ usuarioMacros.modal('IdModal')|e('js') }} ";
        /* parametro datos es un json con atributos: ModalHeader ModalBody ModalFooter AccionModal */
    function CrearModal(datos){
      //Si no existe una modal con ese id, se crea
      
      if($("#"+datos.IdModal).length <= 0){

            var Modal= GlobalModal;
            Modal= Modal.replace("IdModal",datos.IdModal);
            $("body").append(Modal);
        
      }


        $("#"+datos.IdModal).find(".modal-title").html(datos.ModalHeader); 
        $("#"+datos.IdModal).find(".modal-body").html(datos.ModalBody);

        if(datos.ModalFooter!="b" ){
          $("#"+datos.IdModal).find(".modal-footer").html(datos.ModalFooter);
          
        }else{
          
        }


        $("#"+ datos.IdModal+" .confirm").on("click", function(){
            datos.AccionModal();
        })
        //Se muestra la modal
        $("#"+datos.IdModal).modal("show");


    }
  </script>
